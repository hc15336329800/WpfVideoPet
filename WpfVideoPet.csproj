<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net8.0-windows</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<UseWPF>true</UseWPF>
		<PlatformTarget>x64</PlatformTarget>
	</PropertyGroup>

	<ItemGroup>
		<Content Include="Assets\**\*">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

	<ItemGroup>
		<Content Include="AikitNet\DLL\resource\**\*">
			<Link>resource\%(RecursiveDir)%(Filename)%(Extension)</Link>
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
		<Content Include="AikitNet\DLL\keyword.txt">
			<Link>keyword.txt</Link>
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
		<Content Include="AikitNet\DLL\AEE_lib.dll">
			<Link>AEE_lib.dll</Link>
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
		<Content Include="AikitNet\DLL\ef7d69542_v1014_aee.dll">
			<Link>ef7d69542_v1014_aee.dll</Link>
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

	<ItemGroup>
	  <Compile Remove="AikitNet\**" />
	  <EmbeddedResource Remove="AikitNet\**" />
	  <None Remove="AikitNet\**" />
	  <Page Remove="AikitNet\**" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="HelixToolkit.Wpf" Version="2.27.3" />
		<PackageReference Include="MQTTnet" Version="4.3.2" />
		<PackageReference Include="LibVLCSharp.WPF" Version="3.9.4" />
		<PackageReference Include="Microsoft.Web.WebView2" Version="1.0.2592.51" />
		<PackageReference Include="NAudio" Version="2.2.1" />
		<PackageReference Include="System.IO.Ports" Version="9.0.9" />
		<PackageReference Include="System.Speech" Version="9.0.9" />
		<PackageReference Include="VideoLAN.LibVLC.Windows" Version="3.0.21" />
	</ItemGroup>
	
	<ItemGroup>
		<Reference Include="System.Speech" />
	</ItemGroup>

	<ItemGroup>
		<None Update="webrtcsettings.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="doc\" />
	</ItemGroup>

	<Target Name="EnsureWpfVideoPetNotRunning" BeforeTargets="Build" Condition="'$(OS)' == 'Windows_NT'">
		<Exec Command="taskkill /F /IM WpfVideoPet.exe" ContinueOnError="true" />
	</Target>

</Project>