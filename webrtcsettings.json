{
    "_comment": "示例配置：根据实际部署的信令服务和房间信息进行调整。",

    "role": "client",
    "_comment_role": "角色标识：client 表示访客端，operator 表示坐席端。",

    "room": "lanmao001",
    "_comment_room": "房间号：访客与坐席需填写相同的房间名才能互通。",

    "signalServer": "wss://192.168.0.22:8443",
    "_comment_signalServer": "信令服务器 WebSocket 地址，例如 wss://example.com/ws。",

    "operatorToken": "",
    "_comment_operatorToken": "坐席端鉴权 Token（如需要），访客端可留空。",

    "pageUrl": "https://192.168.0.22/",
    "_comment_pageUrl": "承载 WebRTC 前端页面的地址，将在 WebView2 中加载。",

    "mqtt": {
        "␊": null,
        "_comment": "MQTT 对接配置，可根据后端平台的实际分配进行调整。",
        "␊": null,
        "enabled": true,
        "␊": null,
        "serverUri": "tcp://106.52.194.56:1883",
        "␊": null,
        "clientId": "lanmao001", // 上位机唯一标识␊
        "topic": "ts_lanmao001", //默认主题␊
        "username": "admin",
        "password": "admin",
        "qos": 1,
        "cleanSession": false,
        "keepAliveInterval": 60,
        "connectionTimeout": 10
    },

    "modbus": {
        "_comment": "RS485 继电器参数，启用后可通过 Modbus RTU 读写 8 路 IO。",
        "enabled": true,
        "portName": "COM3",
        "baudRate": 9600,
        "parity": "None",
        "dataBits": 8,
        "stopBits": "One",
        "slaveAddress": 1,
        "readTimeout": 1000,
        "writeTimeout": 1000
    },

    "audio": {
        "_comment": "语音识别时的音量压低设置。",
        "ducking": {
            "enabled": false,
            "restoreDelaySeconds": 5
        }
    }
}
